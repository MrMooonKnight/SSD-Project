# Flask Secret Key (required)
VIBE_SECRET_KEY=change-me-in-production

# JWT Secret Key (required)
VIBE_JWT_SECRET_KEY=change-jwt-secret-in-production

# Environment (development, testing, production)
VIBE_ENV=development

# CORS Origins (comma-separated)
VIBE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database URI (SQLite for dev, PostgreSQL for prod)
VIBE_SQLALCHEMY_DATABASE_URI=sqlite:///vibechat.db

# JWT Token Expiration (seconds)
VIBE_JWT_ACCESS_TOKEN_EXPIRES=3600
VIBE_JWT_REFRESH_TOKEN_EXPIRES=86400
